<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


,
                <ImageView
                    android:id="@+id/total_bookImage"
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/ic_menu_gallery"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/total_bookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="제목"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/total_bookImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/total_bookAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingRight="10dp"
                    android:text="저자"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    app:layout_constraintStart_toEndOf="@+id/total_bookImage"
                    app:layout_constraintTop_toBottomOf="@+id/total_bookTitle" />

                <TextView
                    android:id="@+id/total_bookContent"
                    android:layout_width="240dp"
                    android:layout_height="208dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="10"
                    android:paddingRight="10dp"
                    android:text="줄거리"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    app:layout_constraintStart_toEndOf="@+id/total_bookImage"
                    app:layout_constraintTop_toBottomOf="@+id/total_bookAuthor" />

                <Button
                    android:id="@+id/total_allButton"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#B9A7E1"
                    android:text="전체"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/total_bookImage" />

                <Button
                    android:id="@+id/total_priceButton"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#B9A7E1"
                    android:text="가격"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    app:layout_constraintStart_toEndOf="@+id/total_allButton"
                    app:layout_constraintTop_toBottomOf="@+id/total_bookImage" />

                <Button
                    android:id="@+id/total_mileageButton"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#B9A7E1"
                    android:text="마일리지"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    app:layout_constraintStart_toEndOf="@+id/total_priceButton"
                    app:layout_constraintTop_toBottomOf="@+id/total_bookImage" />




                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="330dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">


                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                            <TableLayout
                                android:id="@+id/total_Table"
                                android:layout_width="370dp"
                                android:layout_height="340dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/table_border"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/total_allButton">

                    <TableRow>

                        <TextView
                            android:id="@+id/total_alladin"
                            android:layout_width="370dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_borderunder"
                            android:gravity="center"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="알라딘"
                            android:textColor="#000000"
                            android:textSize="20dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/total_alladinPrice"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="가격"
                            android:textColor="#000000"
                            android:textSize="18dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/total_alladinMileage"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/table_borderunder"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:paddingTop="3dp"
                            android:paddingRight="3dp"
                            android:paddingBottom="3dp"
                            android:text="마일리지"
                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/total_yes24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_borderunder"
                            android:gravity="center"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="Yes24"
                            android:textColor="#000000"
                            android:textSize="20dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/total_yes24Price"
                            android:layout_width="370dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="가격"
                            android:textColor="#000000"
                            android:textSize="18dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/total_yes24Mileage"
                            android:layout_width="370dp"
                            android:layout_height="45dp"
                            android:background="@drawable/table_borderunder"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:paddingTop="3dp"
                            android:paddingRight="3dp"
                            android:paddingBottom="3dp"
                            android:text="마일리지"
                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </TableRow>


                    <TableRow>

                        <TextView
                            android:layout_width="370dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_borderunder"
                            android:gravity="center"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="교보문고"
                            android:textColor="#000000"
                            android:textSize="20dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/total_kyoboPrice"
                            android:layout_width="370dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="가격"
                            android:textColor="#000000"
                            android:textSize="18dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/total_kyoboMileage"
                            android:layout_width="370dp"
                            android:layout_height="45dp"
                            android:background="@drawable/table_borderunder"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:paddingTop="3dp"
                            android:paddingRight="3dp"
                            android:paddingBottom="3dp"
                            android:text="마일리지"
                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </TableRow>
                </TableLayout>
</LinearLayout>

    </ScrollView>








</android.support.constraint.ConstraintLayout>